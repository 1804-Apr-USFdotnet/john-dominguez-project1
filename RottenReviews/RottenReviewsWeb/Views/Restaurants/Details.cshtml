<h2>Reviews</h2>
@Html.ActionLink("Add Review", "Create", "Reviews", new { id = Model.ID }, null)

@foreach (var review in Model.Reviews)
{
    <div class="card w-100">
        <div class="card-body">
            <h5 class="card-title">@review.Rating Stars</h5>
            <p>
                <blockquote>
                    @review.Comment
                    <footer class="blockquote-footer">
                        @review.Author
                        <cite title="Post Time">
                            @review.Created
                        </cite>
                    </footer>
                </blockquote>
            </p>
            @Html.ActionLink("Edit", "Edit", "Reviews", new { id = review.ID }, new { @class = "btn btn-outline-primary" })
            @Html.ActionLink("Delete", "Delete", "Reviews", new { id = review.ID }, new { @class = "btn btn-danger" })
        </div>
    </div>
}
